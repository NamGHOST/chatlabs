{
    "manifest_version": 3,
    "name": "Agent UI Extension",
    "version": "1.0",
    "description": "Chrome extension for interacting with the Cursor AI agent",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabs",
        "cookies"
    ],
    "host_permissions": [
        "http://localhost:3000/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "48": "icons/icon48.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "icons": {
        "48": "icons/icon48.png"
    }
}